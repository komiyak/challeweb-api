{
  "name": "Challeweb Api",
  "description": "The api for the challeweb application.",
  "repository": "https://github.com/komiyak/challeweb-api",
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "scripts": {
    "postdeploy": "bundle exec db:drop db:setup sample_data:setup"
  },
  "env": {
    "RACK_ENV": {
      "required": true,
      "value": "production"
    },
    "RAILS_ENV": {
      "required": true,
      "value": "production"
    },
    "RAILS_MAX_THREADS": {
      "required": true,
      "value": 4
    },
    "WEB_CONCURRENCY": {
      "required": true,
      "value": 2
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "10"
      }
    }
  ]
}
